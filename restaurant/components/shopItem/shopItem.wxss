/* ------- 列表------------- */
.shopItem {
  position: relative;
  width: 90%;
  margin:0 auto;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  /* box-shadow: 0px 1px 1px 1rpx rgba(99, 110, 114,0.3); */
  box-shadow: 0 1px 2px rgb(150 150 150 / 30%);

  height: 200rpx;
}
/* 图片位置 */
.left {
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.left image {
  width: 250rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

/* ---属性---- */
.content {
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;

}
.title {
  display: inline-block;
  width: 240rpx;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

.itemDetail {
  margin-top: 20rpx;
    font-size: 30rpx;
  color: #7F7F7F
}
.itemDetail image {
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx
}
/* .monthsale {
  margin-left: 20rpx;
} */

.right {
  float: right;
  margin-right:16rpx;
  margin-top: 100rpx;
}
.right image {
  width: 36rpx;
  height: 36rpx;
}
.count {
  display: inline-block;
  text-align: center;
  /* width: 36rpx; */
  height: 36rpx;
  margin:0 5px;
  line-height: 36rpx;
  position: relative;
  bottom: 4rpx;
  font-size:36rpx;
}
.delete{
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}
v-icon{
  padding: 8rpx;
  font-size: 18rpx;
  font-weight: 800;
  background-color: red;
  color: #fff;
  border-radius: 50%;
}