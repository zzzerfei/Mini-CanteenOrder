body {
  -webkit-overflow-scrolling: touch
}

page {
  height: 100%;
  overflow: scroll;
  background-color: #f5f6fa;
}

.fix {
  z-index: 999;
  position: fixed;
  top: 0;
}

/* ---------------导航条---------- */
.nav {
  position: relative;
}

.nav>.dropdown-menu {
  position: absolute;
  left: 24rpx;
}

.picker {
  text-align: center;
  display: inline;
  color: #2d3436;
}

.picker~v-icon {
  display: inline;
  position: relative;
  right: 3rpx;
  top: 2rpx;
}

.nav>.title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

/* ------------------搜索框------------- */
.search-container {
  /* box-shadow: 0px 1px 1px 1rpx rgba(99, 110, 114,0.3) */
  box-shadow: 0 1px 2px rgb(150 150 150 / 30%)
}

.van-search__action {
  margin-right: 10rpx;
}

.van-search__content {
  border-radius: 50rpx !important;
}

/* ----------------分类栏------------- */

.type-container {
  background-color: #fff;
  border-radius: 10rpx;
  margin: auto;
  margin-top: 250rpx;
  width: 90vw;
  /* box-shadow: 0px 1px 1px 1rpx rgba(99, 110, 114, 0.3); */
  box-shadow: 0 1px 2px rgb(150 150 150 / 30%)
  
}

.typeItem {
  display: flex;
  flex-wrap: wrap;
  flex-basis: auto;
}

.active {
  color: #ffc300;
  border-bottom: #ffc300 3px solid;
}

.bottom-warning{
  margin: 20rpx 0 30rpx;
  font-size: 26rpx;
  text-align: center;
  color:#b2bec3 ;

}
